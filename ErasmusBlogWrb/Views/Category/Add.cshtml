@model EntityLayer.Concrete.Category

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link href="~/css2/bootstrap.min.css" rel="stylesheet" />

<br />
@using (Html.BeginForm("Add", "Category", FormMethod.Post))
{
    
    <div class="form-group">
        @Html.Label("Category Name")
        @Html.TextBoxFor(x=>x.CategoryName)
    </div>
    <div class="form-group">
        @Html.Label("Category Description")
        @Html.TextBoxFor(x=>x.CategoryDescription)
    </div>
    <div class="form-group">
        @Html.Label("Category Status")
        @Html.DropDownListFor(model => Model.CategoryStatus,new List<SelectListItem>(){ new SelectListItem(){ Text = "Yes", Value="True"}, new SelectListItem(){ Text = "No", Value="False"}})
    </div>
    
    <button>Save</button>


}